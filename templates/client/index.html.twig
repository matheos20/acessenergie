    <div class="container mt-5">
    <div class="row">
        <div class="col-md-auto" style="display: flex">
        <h5 class="col-md-auto" style="padding-top: 9px; margin-right: 15px;color: #26663b;font-weight: 900;">Liste des clients</h5>
            <div class="input-group" style="display: flex">
                <div style="display: flex">

{#                <input class="form-control border-end-0 border rounded-pill" type="search" value="search" id="example-search-input">#}



                 <div >

                    {{ form_start(form) }}
                    {{ form_row(form.social_reason) }}
                    <span class="input-group-append">
                        <button class="btn btn-outline-secondary bg-white border-bottom-0 border rounded-pill ms-n5" type="submit">
                            <i class="fa fa-search" style="width: 14px;padding: 4px"></i>
                        </button>
                    </span>
                    {{form_end(form)}}
                </div>

                    <a  href="{{ path('client_new') }}" style="height: 35px;margin-left: 10px;background-color: #95c24e;border-radius: 10px;padding: 6px;text-decoration: none;color: white">Ajouter</a>
                     {% if app.user %}
                    <div class="col" style="display: flex; margin-left:400px;">
                    <img class="avatar avatar-128 bg-light rounded-circle text-white p-2"
                    src="https://raw.githubusercontent.com/twbs/icons/main/icons/person-fill.svg"  >
                    <span class="name-user" style="margin-top: 15px">{{ app.user.username }}</span>

                    </div>


                {% endif %}
                 </div>
        </div>
    </div>




        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger p-md-2" style="margin: 50px;text-align: center;">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('succes') %}
            <div class="alert alert-success p-md-2" style="margin: 50px;text-align: center;">
                {{ message }}
            </div>
        {% endfor %}
    <table class="table table-striped table-bordered table-hover" style="margin: 48px auto;width: 100%">
            <thead style="background-color: #95c24e">
                    <tr style="font-size: .7vw;">
                        <th scope="col" class="align-middle"style="width: 10%;background-color: #95c24e">Raison sociale </th>
                        <th scope="col" class="align-middle"style="width: 15%;background-color: #95c24e">Siren </th>
                        <th scope="col" class="align-middle"style="width: 10%;background-color: #95c24e">Nom du Signataire </th>
                        <th scope="col" class="align-middle"style="width: 10%;background-color: #95c24e">Fonction</th>
                        <th scope="col" class="align-middle" style="width: 10%;background-color: #95c24e">Adresse mail </th>
                        {% if is_granted('ROLE_ADMIN') %}
                        <th scope="col" class="align-middle" style="width: 10%;background-color: #95c24e">Vendeur</th>
                        {% endif %}
                        <th scope="col" class="align-middle" style="width: 35%;background-color: #95c24e">actions</th>
                    </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                    <tr style="font-size: .7vw;">

                        <td data-label=Raison_sociale data-toggle="tooltip" title="{{client.socialReason}}">{{ client.socialReason |slice(0,8)}}</td>
                        <td data-label=Siren data-toggle="tooltip" title="{{client.mermaid}}">{{ client.mermaid |slice(0,8)}}</td>
                        <td data-label=Nom_du_Signataire data-toggle="tooltip" title="{{client.nameOfSignatory}}">{{ client.nameOfSignatory |slice(0,8)}}</td>
                        <td data-label=Fonction data-toggle="tooltip" title="{{client.function}}">{{ client.function |slice(0,8)}}</td>
                        <td data-label=Adresse_mail data-toggle="tooltip" title="{{client.mail}}">{{ client.mail |slice(0,8)}}</td>
                        {% if is_granted('ROLE_ADMIN') %}
                        <td data-label=Vendeur data-toggle="tooltip" title="{{client.user.username}}">{{ client.user.username |slice(0,8)}}</td>
                        {% endif %}
                        <td data-label=actions>
                                <a href="{{ path('client_show', {'id': client.id}) }}" class="btn btn-info"  style="font-size: .7vw;"><i class="fa fa-eye"></i>Voir</a>
                                <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-secondary"  style="font-size: .7vw;"><i class='bi bi-pencil'> </i>Modifier</a>
                                <a href="{{ path('Ajout_demande', {'id': client.id}) }}" class="btn btn-success"  style="font-size: .7vw;"><i  class="bi bi-envelope"></i>Envoyer</a>
                        {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('client_delete', {'id': client.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer?')" class="btn btn-danger"  style="font-size: .7vw;"><i class='bi bi-trash'></i>Supprimer</a>

                        {% endif %}
                        {% if client.valider == true  %}
                                <a ><i style="color: green;padding-left:20px" class="fa fa-check" aria-hidden="true"></i></a>
                        {% endif %}

                                <a href="{{ path('client_pdf', {'id': client.id}) }}" class="btn btn-warning"  style="font-size: .7vw;"><i class="fa fa-file-pdf-o"></i>pdf</a>
                        </td>
                    </tr>
            {% else %}
                    <tr>
                        <td colspan="8">Aucun enregistrement trouvé</td>
                    </tr>
            {% endfor %}
            </tbody>
    </table>
        <div class="navigation" style="text-align: center">
            {{ knp_pagination_render(clients) }}
        </div>
    </div>
{% endblock %}
