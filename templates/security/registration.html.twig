{% extends 'base.html.twig' %}
{% block body %}

    <link rel="stylesheet" href="{{ asset('css/Navabar.css') }}">
    <style>

    </style>
    <div class="container">
        <script src="./assets/js/jquery-3.6.0.js"></script>
            <div class="titre">Inscription</div>
                    <div class="formcontact">

                        {{form_start(form)}}

                        <div class="form-group ">
                            <label for="nom" class="col-sm-2 col-form-label">Nom</label>
                            {{form_widget(form.name, {'label':'Nom d\utilisateur','attr':{'placeholder': 'votre nom...','class':'form-control'}})}}
                        </div>

                        <div class="form-group ">
                            {{ form_errors(form.username) }}
                            <label for="nom" class="col-sm-2 col-form-label">Prenom</label>
                            {{form_widget(form.username, {'label':'Prenom d\utilisateur','attr':{'placeholder': 'votre prenom...','class':'form-control'}})}}
                        </div>

                        <div class="form-group">
                            {{ form_errors(form.email) }}
                            <label for="Email1" class="col-sm-4 col-form-label">Adresse mail</label>
                            {{form_widget(form.email,{'label':'Adresse mail','attr':{'placeholder':'votre Adresse mail...','class':'form-control'}})}}
                        </div>

                        <div class="form-group">
                            {{ form_errors(form.agence) }}
                            <label for="Email1" class="col-sm-4 col-form-label">Agence</label>
                            {{form_widget(form.agence,{'label':'Agence','attr':{'placeholder':'votre Agence...','class':'form-control'}})}}
                        </div>

                        <div class="form-group">
                            {{ form_errors(form.password) }}
                            <label for="Password1" class="col-sm-4 col-form-label">Mot de passe</label>
                            {{form_widget(form.password,{'label':'mot de passe','attr':{'placeholder':'votre mot de passe...','class':'form-control'}})}}
                        </div>
                        <div class="form-group">
                            {{ form_errors(form.confirm_password) }}
                            <label for="Password1" class="col-sm-4 col-form-label">Confirmer</label>
                            {{form_widget(form.confirm_password,{'label':'confirmation mot de passe','attr':{'placeholder':'repeter votre mot de passe','class':'form-control'}})}}
                    </div>


                    <div class="form-group m-2" style="text-align: center">
                        <button type="submit" class="btn btn-primary">Inscription</button>
                    </div>
                    {{form_end(form)}}
            </div>
    </div>

{% endblock %}
