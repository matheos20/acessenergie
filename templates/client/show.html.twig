                    </tr>
                    <tr>
                        <th>Adresse du siège </th>
                        <td>{{ client.address }}</td>
                    </tr>
                    <tr>
                        <th>Nom du Signataire </th>
                        <td>{{ client.nameOfSignatory }}</td>
                    </tr>
                    <tr>
                        <th>Fonction</th>
                        <td>{{ client.function }}</td>
                    </tr>
                    <tr>
                        <th>Adresse mail </th>
                        <td>{{ client.mail }}</td>
                    </tr>
                    </tbody>
                </table>
     <div class="show" style="text-align: center;">

         <a class="btn btn-primary" href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
         <a class="del" {{ include('client/_delete_form.html.twig') }}</div>
