                <td>{{ electricite.PDL1 }}</td>
                <td>{{ electricite.PDL2 }}</td>
                <td>{{ electricite.PDL3 }}</td>
                <td>{{ electricite.PDL4 }}</td>
                <td>{{ electricite.PDL5 }}</td>
                <td>{{ electricite.PDL6 }}</td>
                <td>{{ electricite.PDL7 }}</td>
                <td>{{ electricite.PDL8 }}</td>
                <td>{{ electricite.PDL9 }}</td>
                <td>{{ electricite.PDL10 }}</td>
                <td>{{ electricite.PDL11 }}</td>
                <td>{{ electricite.PDL12 }}</td>
                <td>{{ electricite.PDL13 }}</td>
                <td>{{ electricite.PDL14 }}</td>
                <td>{{ electricite.PDL15 }}</td>
                <td>{{ electricite.PDL16 }}</td>
                <td>{{ electricite.PDL17 }}</td>
                <td>{{ electricite.PDL18 }}</td>
                <td>{{ electricite.PDL19 }}</td>
                <td>{{ electricite.PDL20 }}</td>
               <td>
                    <a href="{{ path('electricite_show', {'id': electricite.id}) }}"><i style="color: darkgreen;padding-left:20px" class="fa fa-eye" aria-hidden="true"></i></a>
                    <a href="{{ path('electricite_edit', {'id': electricite.id}) }}"><i style="color: yellow;padding-left:20px" class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="22">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation" style="text-align: center ;margin-right: 590px;">
        {{ knp_pagination_render(electricites) }}
    </div>
{% endblock %}
