        .del{
            margin-top: 15px;
            width: 20px;
        }
        .btn{
            margin-left: 5px;
        }
    </style>

    <div class="container mt-5">
        <h1>Client</h1>
            <a style="right: 20px" class="btn btn-success mt-4" href="{{ path('client_index') }}">Retour à liste</a>
                <table class="table table-bordered mt-4">
                    <tbody>
                    <tr>
                        <th>Raison sociale </th>
                        <td>{{ client.socialReason }}</td>
                    </tr>
                    <tr>
                        <th>Siren</th>
