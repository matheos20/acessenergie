            <th>PDL12</th>
            <th>PDL13</th>
            <th>PDL14</th>
            <th>PDL15</th>
            <th>PDL16</th>
            <th>PDL17</th>
            <th>PDL18</th>
            <th>PDL19</th>
            <th>PDL20</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for electricite in electricites %}

