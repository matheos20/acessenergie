{% extends 'base.html.twig' %}

{% block title %}Gaz index{% endblock %}

{% block body %}
    <style>
        form{
            display: flex;
            margin-left: 60%;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha512-SfTiTlX6kk+qitfevl/7LibUOeJWlt9rbyDn92a1DqWOw9vWG2MFoays0sgObmWazO5BQPiFucnnEAjpAB+/Sw==" crossorigin="anonymous" />
<div class="container mt-5">
    <h1 style="margin: 25px;">Listes Gaz</h1>
    <div>
        {{ form_start(form) }}
        {{ form_row(form.PCE1) }}
        <button class="btn btn-primary recherche" type="submit" style="margin-left: 20px;height: 10%">rechercher</button>
        {{form_end(form)}}
    </div>
    <table class="table table-bordered" style="width: 100%">
        <thead>
            <tr style="font-size: .7vw;">
                <th scope="col" class="align-middle"style="width: 10%">Raison sociale</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE1</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE2</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE3</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE4</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE5</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE6</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE7</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE8</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE9</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE10</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE11</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE12</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE13</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE14</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE15</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE16</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE17</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE18</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE19</th>
                <th scope="col" class="align-middle"style="width: 10%">PCE20</th>
                <th scope="col" class="align-middle"style="width: 10%">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gaz in gazs %}

            <tr style="font-size: .7vw;">
                <td data-toggle="tooltip" title="{{ gaz.client.socialReason}}">{{ gaz.client.socialReason |slice(0,8)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE1}}">{{ gaz.PCE1 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE2}}">{{ gaz.PCE2 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE3}}">{{ gaz.PCE3 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE4}}">{{ gaz.PCE4 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE5}}">{{ gaz.PCE5 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE6}}">{{ gaz.PCE6 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE7}}">{{ gaz.PCE7 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE8}}">{{ gaz.PCE8 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE9}}">{{ gaz.PCE9 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE10}}">{{ gaz.PCE10 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE11}}">{{ gaz.PCE11 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE12}}">{{ gaz.PCE12 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE13}}">{{ gaz.PCE13 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE14}}">{{ gaz.PCE14 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE15}}">{{ gaz.PCE15 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE16}}">{{ gaz.PCE16 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE17}}">{{ gaz.PCE17 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE18}}">{{ gaz.PCE18 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE19}}">{{ gaz.PCE19 |slice(0,5)}}...</td>
                <td data-toggle="tooltip" title="{{gaz.PCE20}}">{{ gaz.PCE20 |slice(0,5)}}...</td>
                <td style="display: flex">
                        <a href="{{ path('gaz_show', {'id': gaz.id}) }}"><i style="color: darkgreen;padding-left:5px" class="fa fa-eye" aria-hidden="true"></i></a>
                        <a href="{{ path('gaz_edit', {'id': gaz.id}) }}"><i style="color: blue;padding-left:10px" class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('gaz_delete', {'id': gaz.id}) }}"><i style="color: red;padding-left:10px" class="fa fa-trash delete" aria-hidden="true"></i></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="22">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation" style="text-align: center ;margin-right: 293px;font-size: .7vw;">
        {{ knp_pagination_render(gazs) }}
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}
