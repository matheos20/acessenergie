{% if gazs is not empty %}
    <h2>
        AUTORISATION DE COMMUNICATION DE DONNEES A UN TIERS AUTORISE (GRDF)
    </h2>
    <div class="w3-container">
        <div class="info">

            <p class="p1">
                L’entreprise: 
                <b>
                    {{ client.mermaid }}
                </b>
            </p>
            <p class="p2">
